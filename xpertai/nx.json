{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": [
      "default",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/jest.config.[jt]s",
      "!{projectRoot}/src/test-setup.[jt]s",
      "!{projectRoot}/test-setup.[jt]s",
      "!{projectRoot}/.eslintrc.json",
      "!{projectRoot}/eslint.config.mjs"
    ],
    "sharedGlobals": []
  },
  "plugins": [
    {
      "plugin": "@nx/js/typescript",
      "options": {
        "typecheck": {
          "targetName": "typecheck"
        },
        "build": {
          "targetName": "build",
          "configName": "tsconfig.lib.json",
          "buildDepsName": "build-deps",
          "watchDepsName": "watch-deps"
        }
      }
    },
    {
      "plugin": "@nx/jest/plugin",
      "options": {
        "targetName": "test"
      }
    },
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "lint"
      }
    }
  ],
  "release": {
    "projectsRelationship": "independent",
    "projects": [
      "@xpert-ai/plugin-lark",
      "@xpert-ai/plugin-firecrawl",
      "@xpert-ai/plugin-mineru",
      "@xpert-ai/plugin-dify",
      "@xpert-ai/plugin-file-system",
      "@xpert-ai/plugin-fastgpt",
      "@xpert-ai/plugin-ragflow",
      "@xpert-ai/plugin-unstructured",
      "@xpert-ai/plugin-rag-vlm",
      "@xpert-ai/plugin-milvus",
      "@xpert-ai/plugin-vllm",
      "@xpert-ai/plugin-volcengine",
      "@xpert-ai/plugin-openai-compatible",
      "@xpert-ai/plugin-mysql",
      "@xpert-ai/plugin-hana",
      "@xpert-ai/plugin-xinference",
      "@xpert-ai/plugin-calculator",
      "@xpert-ai/plugin-zip",
      "@xpert-ai/plugin-pdfium",
      "@xpert-ai/plugin-gemini",
      "@xpert-ai/plugin-anthropic",
      "@xpert-ai/plugin-minimax",
      "@xpert-ai/plugin-moonshot",
      "@xpert-ai/plugin-openrouter",
      "@xpert-ai/plugin-context-editing",
      "@xpert-ai/plugin-tool-call-limit",
      "@xpert-ai/plugin-model-fallback",
      "@xpert-ai/plugin-long-term-memory"
    ],
    "version": {
      "preVersionCommand": "npx nx run-many -t build"
    }
  },
  "targetDefaults": {
    "@nx/js:tsc": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"]
    },
    "test": {
      "dependsOn": ["^build"]
    }
  }
}
